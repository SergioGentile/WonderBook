<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDivider"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="it.polito.mad.booksharing.ShowProfile"
    tools:showIn="@layout/activity_show_profile">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/expanded_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />


        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@drawable/shadow_toolbar" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/llParent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:layout_marginRight="@dimen/margin_right"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/windowBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/profileImage"
                                android:layout_width="170dp"
                                android:layout_height="170dp"
                                android:layout_centerInParent="true"
                                android:layout_marginTop="@dimen/top_inside_box"
                                android:src="@drawable/profile" />

                            <TextView
                                android:id="@+id/tvName"
                                android:gravity="center"
                                android:inputType="textMultiLine|textNoSuggestions"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginBottom="@dimen/bottom_inside_box"
                                android:layout_marginTop="@dimen/top_inside_box"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/name_size"
                                />
                        </LinearLayout>

                    </RelativeLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/distance_box">

                        <LinearLayout
                            android:background="@color/windowBackground"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_gravity="left"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_left"
                                android:layout_marginTop="@dimen/top_inside_box"
                                android:layout_marginBottom="@dimen/bottom_inside_box"
                                android:text="@string/personal_information"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/title_box_size" />

                            <LinearLayout
                                android:layout_marginLeft="@dimen/margin_left"
                                android:layout_marginRight="@dimen/margin_right"
                                android:layout_marginBottom="@dimen/bottom_inside_box"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_home_black_24dp"

                                    />

                                <TextView
                                    android:id="@+id/tvStreet"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/margin_left"
                                    android:inputType="textMultiLine|textNoSuggestions"
                                    android:background="?attr/editTextBackground"
                                    android:textColor="@android:color/black"
                                    android:textSize="@dimen/tv_dim" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginLeft="@dimen/margin_left"
                                android:layout_marginRight="@dimen/margin_right"
                                android:id="@+id/llPhone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/bottom_inside_box"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_phone_black_24dp"

                                    />

                                <TextView
                                    android:id="@+id/tvPhone"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/margin_left"
                                    android:background="?attr/editTextBackground"
                                    android:textColor="@android:color/black"
                                    android:inputType="textMultiLine|textNoSuggestions"
                                    android:textSize="@dimen/tv_dim" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginLeft="@dimen/margin_left"
                                android:layout_marginRight="@dimen/margin_right"
                                android:id="@+id/llMail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/bottom_inside_box"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_mail_black_24dp"

                                    />

                                <TextView
                                    android:id="@+id/tvMail"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/margin_left"
                                    android:background="?attr/editTextBackground"
                                    android:textColor="@android:color/black"
                                    android:inputType="textMultiLine|textNoSuggestions"
                                    android:textSize="@dimen/tv_dim" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <android.support.v7.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></android.support.v7.widget.CardView>

                    <LinearLayout
                        android:layout_marginBottom="@dimen/bottom_inside_box"
                        android:id="@+id/llDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/distance_box"
                        android:background="@color/windowBackground"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_left"
                            android:layout_marginRight="@dimen/margin_right"
                            android:layout_marginTop="@dimen/top_inside_box"
                            android:layout_marginBottom="@dimen/bottom_inside_box"
                            android:text="@string/description"
                            android:inputType="textMultiLine|textNoSuggestions"
                            android:textColor="@android:color/black"
                            android:textSize="16dp" />


                        <TextView
                            android:id="@+id/tvDescription"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="@dimen/margin_right"
                            android:layout_marginLeft="@dimen/margin_left"
                            android:layout_marginBottom="@dimen/bottom_inside_box"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/tv_dim" />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>
