<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0ECEC">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.ActionBarContainer
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#AABCCC" />

            <ImageButton
                android:id="@+id/btnDone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:layout_marginRight="@dimen/margin_left"
                android:background="@android:color/transparent"
                android:padding="@dimen/padding"
                android:src="@drawable/ic_check_black_24dp" />
        </android.support.v7.widget.ActionBarContainer>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"

                                android:layout_marginLeft="@dimen/margin_left">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/profileImage"
                                    android:layout_width="130dp"
                                    android:layout_height="130dp"
                                    android:layout_marginTop="@dimen/margin_top"

                                    android:src="@drawable/profile" />

                                <ImageButton
                                    android:id="@+id/btnEditImg"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_alignRight="@id/profileImage"
                                    android:background="@android:color/transparent"
                                    android:src="@drawable/ic_add_a_photo_black_24dp" />

                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="@dimen/margin_right"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <com.rengwuxian.materialedittext.MaterialEditText
                                    android:id="@+id/edtName"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="15dp"
                                    android:hint="@string/name"
                                    android:inputType="text"
                                    android:nextFocusDown="@id/edtSurname"
                                    android:textCursorDrawable="@null"
                                    android:textSize="@dimen/tv_dim"
                                    app:met_underlineColor="@android:color/black" />

                                <com.rengwuxian.materialedittext.MaterialEditText

                                    android:id="@+id/edtSurname"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/surname"
                                    android:inputType="text"
                                    android:nextFocusDown="@id/edtCity"
                                    android:textCursorDrawable="@null"
                                    android:textSize="@dimen/tv_dim"
                                    app:met_underlineColor="@android:color/black" />
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginBottom="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_left"
                            android:layout_marginRight="@dimen/margin_right"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <com.rengwuxian.materialedittext.MaterialEditText
                                android:id="@+id/edtCity"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:layout_weight="0.7"
                                android:hint="@string/city"
                                android:inputType="text"
                                android:nextFocusDown="@id/edtCap"
                                android:textCursorDrawable="@null"
                                android:textSize="@dimen/tv_dim"
                                app:met_underlineColor="@android:color/black" />

                            <com.rengwuxian.materialedittext.MaterialEditText
                                android:id="@+id/edtCap"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.3"
                                android:hint="@string/cap"
                                android:inputType="number"
                                android:nextFocusDown="@id/edtStreet"
                                android:textCursorDrawable="@null"
                                android:textSize="@dimen/tv_dim"
                                app:met_underlineColor="@android:color/black" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="@android:color/white"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="@dimen/margin_left"
                            android:layout_marginRight="@dimen/margin_right"
                            android:layout_marginTop="10dp"
                            android:text="Informazioni personali"
                            android:textColor="#842A2A"
                            android:textSize="16dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_left"
                            android:layout_marginRight="@dimen/margin_right"
                            android:orientation="horizontal"
                            android:weightSum="4">

                            <com.rengwuxian.materialedittext.MaterialEditText
                                android:id="@+id/edtBirth"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:layout_weight="1"
                                android:hint="Data di Nascita"
                                android:inputType="number"
                                android:nextFocusDown="@id/edtCap"
                                android:textCursorDrawable="@null"
                                android:textSize="@dimen/tv_dim"
                                app:met_underlineColor="@android:color/black" />

                            <Switch

                                android:theme="@style/SwitchTheme"
                                android:id="@+id/swBirth"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/margin_sw"
                                android:layout_weight="1"
                                android:checked="true" />

                            <RadioGroup
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <RadioButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:checked="true"
                                    android:text="M" />

                                <RadioButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="F" />

                            </RadioGroup>

                            <Switch
                                android:id="@+id/swSex"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/margin_sw"
                                android:layout_weight="1"
                                android:checked="true" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layoutStreet"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_left"
                            android:layout_marginRight="@dimen/margin_right"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <com.rengwuxian.materialedittext.MaterialEditText
                                android:id="@+id/edtStreet"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.4"
                                android:hint="@string/street"
                                android:inputType="text"
                                android:textCursorDrawable="@null"
                                android:textSize="@dimen/tv_dim"
                                app:met_underlineColor="@android:color/black" />
                            <!--<ImageButton
                                android:id="@+id/btnStreet"
                                android:layout_gravity="center"
                                android:layout_weight="1.6"
                                android:background="@android:color/transparent"
                                android:src="@drawable/ic_lock_outline_black_24dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />-->
                            <Switch
                                android:theme="@style/SwitchTheme"
                                android:layout_gravity="center"
                                android:id="@+id/swStreet"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.6"
                                android:checked="true" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_left"
                            android:layout_marginRight="@dimen/margin_right"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <com.rengwuxian.materialedittext.MaterialEditText
                                android:id="@+id/edtPhone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.4"
                                android:hint="@string/phone"
                                android:inputType="number"
                                android:textCursorDrawable="@null"
                                android:textSize="@dimen/tv_dim"
                                app:met_underlineColor="@android:color/black" />

                            <!--<ImageButton
                                android:id="@+id/btnPhone"
                                android:layout_gravity="center"
                                android:layout_weight="1.6"
                                android:background="@android:color/transparent"
                                android:src="@drawable/ic_lock_outline_black_24dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />-->

                            <Switch
                                android:theme="@style/SwitchTheme"
                                android:layout_gravity="center"
                                android:id="@+id/swPhone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.6"
                                android:checked="true" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_left"
                            android:layout_marginRight="@dimen/margin_right"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <com.rengwuxian.materialedittext.MaterialEditText
                                android:id="@+id/edtMail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.4"
                                android:hint="E-Mail"
                                android:inputType="textEmailAddress"
                                android:textCursorDrawable="@null"
                                android:textSize="@dimen/tv_dim"
                                app:met_underlineColor="@android:color/black" />

                            <!--<ImageButton
                                android:id="@+id/btnMail"
                                android:layout_gravity="center"
                                android:layout_weight="1.6"
                                android:background="@android:color/transparent"
                                android:src="@drawable/ic_lock_outline_black_24dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" /> -->

                            <Switch
                                android:layout_gravity="center"
                                android:theme="@style/SwitchTheme"
                                android:id="@+id/swMail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.6"
                                android:checked="true" />
                        </LinearLayout>

                    </LinearLayout>

                    <android.support.design.widget.TextInputLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="@android:color/white"
                        android:textCursorDrawable="@null"
                        android:theme="@style/AutocompleteDescription">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_left"
                            android:layout_marginRight="@dimen/margin_right"
                            android:ellipsize="start"
                            android:hint="@string/description"
                            android:textCursorDrawable="@null"
                            android:textSize="@dimen/tv_dim"
                            android:textStyle="italic"
                            android:theme="@style/Autocomplete" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
            </ScrollView>
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
