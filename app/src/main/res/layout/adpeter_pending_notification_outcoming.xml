<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_book"
            android:layout_width="@dimen/width_book_small"
            android:layout_height="@dimen/height_book_small"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/bottom_inside_box"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_marginRight="@dimen/margin_right"
            android:layout_marginTop="@dimen/top_inside_box"
            android:scaleType="fitXY"
            android:src="@drawable/libro_prova" />

        <LinearLayout
            android:id="@+id/ll_adapter_searched_book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_right"
            android:layout_marginTop="@dimen/top_inside_box"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:layout_marginRight="@dimen/margin_right"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/tv_dim" />
                <TextView
                    android:id="@+id/book_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Il Codice da Vinci"
                    android:textColor="@color/colorSecondaryText"
                    android:textSize="@dimen/tv_dim" />

            </LinearLayout>

            <LinearLayout
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Owner "
                    android:layout_marginRight="@dimen/margin_right"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/tv_dim" />
                <TextView
                    android:id="@+id/book_owner"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Brown"
                    android:textColor="@color/colorSecondaryText"
                    android:textSize="@dimen/tv_dim" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginRight="0dp"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView

                        android:layout_weight="0.3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lender"
                        android:layout_marginRight="@dimen/margin_right"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/tv_dim" />

                    <TextView
                        android:id="@+id/book_lender"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.4"
                        android:gravity="center"
                        android:text="Sergio Gentile"
                        android:textColor="@color/colorSecondaryText"
                        android:textSize="@dimen/tv_dim" />

                    <ImageView
                        android:paddingRight="0dp"
                        android:id="@+id/drop_down_menu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="0.1"
                        android:src="@drawable/ic_arrow_drop_down_black_24dp"
                        android:visibility="visible" />
                    <ImageView

                        android:layout_weight="0.3"
                        android:id="@+id/drop_up_menu"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:src="@drawable/ic_arrow_drop_up_black_24dp"/>
                </LinearLayout>



            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="@dimen/top_inside_box"
                android:id="@+id/cancel_ll"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/tv_accept"
                    android:layout_marginRight="@dimen/margin_right"
                    android:textColor="@android:color/holo_red_light"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="@dimen/title_box_size"
                    android:text="@string/DeleteRequest"/>



            </LinearLayout>

            <View
                android:layout_gravity="end"
                android:layout_marginTop="9dp"
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="1dp" />




        </LinearLayout>


    </LinearLayout>



</LinearLayout>