<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorDivider"
    tools:context="it.polito.mad.booksharing.AddReview">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentBottom="true"
            android:background="?attr/colorPrimary"
            app:navigationIcon="@drawable/ic_menu_black_24dp"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:title="@string/review"
            app:titleTextColor="@color/textColorPrimary">

            <ImageButton
                android:id="@+id/btnDone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:layout_marginRight="@dimen/margin_right"
                android:background="@android:color/transparent"
                android:padding="@dimen/padding"
                android:src="@drawable/ic_check_black_24dp" />
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>
    <View
        android:background="@drawable/shadow_toolbar"
        android:layout_width="match_parent"
        android:layout_height="8dp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <android.support.v7.widget.CardView
            android:layout_marginBottom="20dp"
            android:layout_marginRight="@dimen/margin_right"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginRight="@dimen/margin_right"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_marginBottom="@dimen/bottom_inside_box"
                android:layout_marginTop="@dimen/top_inside_box"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="@string/write_new_review"
                    android:textSize="@dimen/title_box_size"
                    android:layout_marginTop="@dimen/top_inside_box"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="@color/colorSecondaryText"
                    android:text="@string/describe_exp_with"
                    android:textSize="@dimen/subtitle_box_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <RadioGroup
                    android:layout_marginTop="@dimen/top_inside_box"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/borrow"
                        android:checked="true"
                        android:text="@string/i_borrow_book"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:id="@+id/land"
                        android:text="@string/i_lend_book"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </RadioGroup>

                <RatingBar
                    android:layout_marginBottom="@dimen/bottom_inside_box"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="@dimen/top_inside_box"
                    android:id="@+id/rating_reviews"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:isIndicator="false"
                    android:numStars="5"
                    android:stepSize="1"
                    android:theme="@style/RatingBar" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/title">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edtTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/top_inside_box"
                        android:inputType="textNoSuggestions"
                        android:singleLine="true"
                        android:textSize="@dimen/tv_dim" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/review">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edtReview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/top_inside_box"
                        android:inputType="textNoSuggestions|textMultiLine"
                        android:singleLine="false"
                        android:textSize="@dimen/tv_dim" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>

    </FrameLayout>


</LinearLayout>
