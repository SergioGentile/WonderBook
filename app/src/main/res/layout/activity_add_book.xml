<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDivider"
    android:orientation="vertical"
    tools:context="it.polito.mad.booksharing.AddBook">


    <android.support.v7.widget.ActionBarContainer
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            app:title="@string/app_name"
            app:titleTextColor="@color/textColorPrimary" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:padding="@dimen/padding"
                android:src="@drawable/ic_delete_black_24dp" />

            <ImageButton
                android:id="@+id/btnDone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_right"
                android:background="@android:color/transparent"
                android:padding="@dimen/padding"
                android:src="@drawable/ic_check_black_24dp" />
        </LinearLayout>

    </android.support.v7.widget.ActionBarContainer>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@drawable/shadow_toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorDivider">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/windowBackground"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_left"
                            android:layout_marginTop="@dimen/top_inside_box"
                            android:text="@string/information"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/title_box_size" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="10dp">

                            <ImageView
                                android:id="@+id/btnScan"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:layout_marginRight="10dp"
                                android:src="@drawable/barcode" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="@string/bar_code_fill"
                                android:textColor="@color/colorSecondaryText"
                                android:textSize="@dimen/title_box_size" />

                        </LinearLayout>

                        <EditText
                            android:id="@+id/tvTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_left"
                            android:layout_marginRight="@dimen/margin_right"
                            android:layout_marginTop="@dimen/top_inside_box"
                            android:hint="@string/title"
                            android:singleLine="true"
                            android:textSize="@dimen/tv_dim" />
                        <EditText
                            android:id="@+id/tvSubtitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_left"
                            android:layout_marginRight="@dimen/margin_right"
                            android:layout_marginTop="@dimen/top_inside_box"
                            android:hint="@string/subtitle"
                            android:singleLine="true"
                            android:textSize="@dimen/tv_dim" />

                        <EditText
                            android:id="@+id/tvAuthor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_left"
                            android:layout_marginRight="@dimen/margin_right"
                            android:layout_marginTop="@dimen/top_inside_box"
                            android:hint="@string/author"
                            android:singleLine="true"
                            android:textSize="@dimen/tv_dim" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/bottom_inside_box"
                            android:layout_marginLeft="@dimen/margin_left"
                            android:layout_marginRight="@dimen/margin_right"
                            android:layout_marginTop="@dimen/top_inside_box"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <EditText
                                android:id="@+id/tvProduction"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/margin_right"
                                android:layout_weight="0.5"
                                android:hint="@string/publisher"
                                android:singleLine="true"
                                android:textSize="@dimen/tv_dim" />

                            <EditText
                                android:id="@+id/tvYear"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:hint="@string/year"
                                android:singleLine="true"
                                android:textSize="@dimen/tv_dim" />
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:layout_marginRight="@dimen/margin_right"
                    android:layout_marginTop="@dimen/margin_top">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/windowBackground"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_left"
                            android:layout_marginTop="@dimen/top_inside_box"
                            android:text="@string/condition"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/title_box_size" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_left"
                            android:layout_marginRight="@dimen/margin_right"
                            android:text="@string/condition_description"
                            android:textColor="@color/colorSecondaryText"
                            android:textSize="12dp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="@dimen/bottom_inside_box"
                            android:layout_marginLeft="@dimen/margin_left"
                            android:layout_marginRight="@dimen/margin_right"
                            android:layout_marginTop="@dimen/top_inside_box">

                            <android.support.v7.widget.CardView
                                android:id="@+id/cvImage"
                                android:layout_width="90dp"
                                android:layout_height="125dp"
                                android:layout_alignParentLeft="true"
                                app:cardUseCompatPadding="true">

                                <ImageView
                                    android:id="@+id/myImageBook"
                                    android:layout_width="90dp"
                                    android:layout_height="125dp"
                                    android:layout_marginBottom="@dimen/bottom_inside_box"
                                    android:scaleType="center"
                                    android:src="@drawable/ic_photo_camera_black_24dp" />
                            </android.support.v7.widget.CardView>

                            <LinearLayout
                                android:id="@+id/llCondition"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_left"
                                android:layout_toRightOf="@+id/cvImage"
                                android:orientation="vertical">

                                <RatingBar
                                    android:id="@+id/ratingBar"
                                    style="?android:attr/ratingBarStyleSmall"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/bottom_inside_box"
                                    android:isIndicator="false"
                                    android:numStars="5"
                                    android:stepSize="1"
                                    android:theme="@style/RatingBar" />

                                <EditText
                                    android:id="@+id/tvDescription"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/bottom_inside_box"
                                    android:layout_marginRight="@dimen/margin_right"
                                    android:hint="@string/description"
                                    android:inputType="textMultiLine"
                                    android:singleLine="false"
                                    android:textSize="@dimen/tv_dim" />
                            </LinearLayout>

                        </RelativeLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

</LinearLayout>
