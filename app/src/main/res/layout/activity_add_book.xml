<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorDivider"
    tools:context="it.polito.mad.booksharing.AddBook">


    <android.support.v7.widget.ActionBarContainer
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            app:titleTextColor="@color/textColorPrimary"
            app:title="@string/app_name" />

        <ImageButton
            android:id="@+id/btnDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:layout_marginRight="@dimen/margin_left"
            android:background="@android:color/transparent"
            android:padding="@dimen/padding"
            android:src="@drawable/ic_check_black_24dp" />

    </android.support.v7.widget.ActionBarContainer>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@drawable/shadow_toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorDivider">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@color/windowBackground"
                    android:orientation="vertical">

                    <TextView
                        android:textColor="@android:color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left"
                        android:layout_marginTop="@dimen/top_inside_box"
                        android:text="@string/information"
                        android:textSize="@dimen/title_box_size" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="10dp">

                        <ImageView
                            android:id="@+id/btnScan"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/barcode" />

                        <TextView
                            android:textColor="@color/colorSecondaryText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/bar_code_fill"
                            android:textSize="@dimen/title_box_size" />

                    </LinearLayout>

                    <EditText

                        android:id="@+id/tvTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left"
                        android:layout_marginRight="@dimen/margin_right"
                        android:layout_marginTop="@dimen/top_inside_box"
                        android:hint="@string/title"
                        android:singleLine="true"
                        android:textSize="@dimen/tv_dim" />

                    <EditText
                        android:id="@+id/tvAuthor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left"
                        android:layout_marginRight="@dimen/margin_right"
                        android:layout_marginTop="@dimen/top_inside_box"
                        android:hint="@string/author"
                        android:singleLine="true"
                        android:textSize="@dimen/tv_dim" />

                    <LinearLayout
                        android:layout_marginTop="@dimen/top_inside_box"
                        android:layout_marginBottom="@dimen/bottom_inside_box"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left"
                        android:layout_marginRight="@dimen/margin_right"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <EditText
                            android:id="@+id/tvProduction"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/margin_right"
                            android:layout_weight="0.5"
                            android:hint="@string/publisher"
                            android:singleLine="true"
                            android:textSize="@dimen/tv_dim" />

                        <EditText
                            android:id="@+id/tvYear"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:hint="@string/year"
                            android:singleLine="true"
                            android:textSize="@dimen/tv_dim" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:layout_marginRight="@dimen/margin_right"
                    android:layout_marginTop="@dimen/margin_top"
                    android:background="@color/windowBackground"
                    android:orientation="vertical">

                    <TextView
                        android:textColor="@android:color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left"
                        android:layout_marginTop="@dimen/top_inside_box"
                        android:text="@string/condition"
                        android:textSize="@dimen/title_box_size" />

                    <TextView
                        android:textColor="@color/colorSecondaryText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left"
                        android:layout_marginRight="@dimen/margin_right"
                        android:text="@string/condition_description"
                        android:textSize="12dp" />

                    <LinearLayout
                        android:layout_marginRight="@dimen/margin_right"
                        android:layout_marginLeft="@dimen/margin_left"
                        android:layout_marginTop="@dimen/top_inside_box"
                        android:weightSum="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_weight="0.7"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <RatingBar
                                style="?android:attr/ratingBarStyleSmall"
                                android:id="@+id/ratingBar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/bottom_inside_box"
                                android:isIndicator="false"
                                android:numStars="5"
                                android:stepSize="1"
                                android:theme="@style/RatingBar" />

                            <EditText
                                android:layout_marginRight="@dimen/margin_right"
                                android:inputType="textMultiLine"
                                android:id="@+id/tvDescription"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/bottom_inside_box"
                                android:backgroundTint="@android:color/darker_gray"
                                android:hint="Descrizione"
                                android:singleLine="true"
                                android:textSize="@dimen/tv_dim" />
                        </LinearLayout>

                        <ImageView
                            android:layout_marginBottom="@dimen/bottom_inside_box"
                            android:src="@drawable/ic_photo_camera_black_24dp"
                            android:layout_weight="1.3"
                            android:id="@+id/myImageBook"
                            android:layout_width="match_parent"
                            android:layout_height="130dp"
                            android:layout_gravity="center"
                            android:scaleType="center" />
                    </LinearLayout>
                </LinearLayout>



            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

</LinearLayout>
