<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDivider"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="it.polito.mad.booksharing.MainPage"
    tools:showIn="@layout/app_bar_main_page">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_marginRight="@dimen/margin_right">

            <ListView
                android:visibility="gone"
                android:id="@+id/lv_search_runtime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null" />
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.gms.maps.MapView
                    android:id="@+id/mapView"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />

                <View
                    android:id="@+id/shadow_main_page"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/shadow"
                    android:background="@drawable/shadow_toolbar" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ListView
                    android:id="@+id/lv_searched"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="45dp"
                    android:divider="@null" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@drawable/shadow_toolbar" />
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:visibility="gone"
                    android:id="@+id/emptyResearch"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginBottom="@dimen/bottom_inside_box"
                        android:src="@drawable/ic_error_outline_black_24dp"
                        android:tint="@color/colorPrimary"
                        android:layout_width="70dp"
                        android:layout_height="70dp" />
                    <TextView
                        android:gravity="center"
                        android:textColor="@color/colorPrimary"
                        android:text="La ricerca non ha prodotto risultati"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <ProgressBar
                    android:layout_marginTop="5dp"
                    android:visibility="gone"
                    android:indeterminateTint="@color/colorPrimary"
                    android:backgroundTintMode="src_in"
                    android:id="@+id/progressAnimation"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    />

            </FrameLayout>
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@drawable/shadow_toolbar"
                android:rotation="180" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/windowBackground">

                <TextView
                    android:id="@+id/tvOrderType"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_margin="10dp"
                    android:background="@color/windowBackground"
                    android:text="Ultime uscite vicino a te" />

              <TextView
                    android:id="@+id/dialogOrder"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_margin="10dp"
                    android:background="@color/windowBackground"
                    android:text="ORDINA" />
            </RelativeLayout>
        </LinearLayout>
    </FrameLayout>


</LinearLayout>
