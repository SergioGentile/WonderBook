<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/adapter_message_thread"
    android:layout_width="match_parent"
    android:background="@color/colorDivider"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/container"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="@dimen/margin_top">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/profile" />

        <LinearLayout
            android:layout_marginHorizontal="10dp"
            android:id="@+id/center_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:id="@+id/ll1"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/user"
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SergioGentile"
                android:textSize="@dimen/tv_dim_big"/>

                <TextView
                    android:id="@+id/text_time"
                    android:layout_width="match_parent"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:text="14:17"
                    android:textSize="@dimen/tv_dim"
                    android:textColor="@color/colorSecondaryText" />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

            <TextView
                android:id="@+id/last_mess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Testo di prova"
                android:textColor="@color/colorSecondaryText" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right">
                <TextView
                    android:visibility="gone"
                    android:id="@+id/notification"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:text="1"
                    android:textSize="@dimen/tv_dim"
                    android:textColor="@android:color/white"
                    android:background="@drawable/round_notification"/>
                </LinearLayout>


            </LinearLayout>
            <View
                android:id="@+id/view_line"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"
                android:layout_gravity="center"
                />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>