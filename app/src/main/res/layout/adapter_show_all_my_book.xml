<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:id="@+id/adapter_cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:elevation="10dp"
    android:orientation="horizontal"
    app:cardBackgroundColor="@color/colorPrimary"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <ImageView
                android:background="@color/windowBackground"
                android:layout_margin="@dimen/margin_right"
                android:id="@+id/image_adapter"
                android:layout_width="80dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:scaleType="center"
                android:src="@drawable/progress_animation" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_adapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Il Codice da Vinci"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/author_adapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dan Brow"
                android:textColor="@android:color/white"
                android:textSize="15sp" />

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/publication_adapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="12dp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/editMyBook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:padding="@dimen/padding"
        android:text="@string/edit"
        android:layout_marginRight="@dimen/margin_right"
        android:layout_marginBottom="@dimen/bottom_inside_box"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        android:background="@android:color/transparent"
        />

</android.support.v7.widget.CardView>
